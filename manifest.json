{
    "manifest_version": 2,
    "name": "Crypto Tracker",
    "version": "0.1",
    "description": "Alerts user when BTC price hits a price they want to buy or sell at",
    "icons": {
        "16": "btc.png",
        "32": "btc.png",
        "128": "btc.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "btc.png",
            "32": "btc.png",
            "128": "btc.png"
        },
        "default_popup": "index.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["main.js"]
    }
}